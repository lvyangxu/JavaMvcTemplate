<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <!--系统日志-->
    <appender name="system" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${SemRootDir}/mylog/system" />
        <param name="Threshold" value="info" />
        <param name="Append" value="true" />
        <param name="DatePattern" value="'.'yyyy-MM-dd'.txt'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss}] %5p %m%n" />
        </layout>
    </appender>
    <!--数据库相关日志-->
    <appender name="database" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${SemRootDir}/mylog/database" />
        <param name="Threshold" value="info" />
        <param name="Append" value="true" />
        <param name="DatePattern" value="'.'yyyy-MM-dd'.txt'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss}] %5p %m%n" />
        </layout>
    </appender>
    <!--错误日志-->
    <appender name="error" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${SemRootDir}/mylog/error" />
        <param name="Threshold" value="info" />
        <param name="Append" value="true" />
        <param name="DatePattern" value="'.'yyyy-MM-dd'.txt'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss}] %5p %m%n" />
        </layout>
    </appender>      
    <!--业务日志-->
    <appender name="business" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${SemRootDir}/mylog/business" />
        <param name="Threshold" value="info" />
        <param name="Append" value="true" />
        <param name="DatePattern" value="'.'yyyy-MM-dd'.txt'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yy-MM-dd HH:mm:ss}] %5p %m%n" />
        </layout>
    </appender>      
    <logger name="system">
        <level value="all" />
        <appender-ref ref="system" />
    </logger>
    <logger name="database">
        <level value="all" />
        <appender-ref ref="database" />
    </logger>
    <logger name="error">
        <level value="all" />
        <appender-ref ref="error" />
    </logger>
    <logger name="business">
        <level value="all" />
        <appender-ref ref="business" />
    </logger>    
    <root>
        <level value="info" />
    </root>

</log4j:configuration>       
